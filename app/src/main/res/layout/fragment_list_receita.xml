<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D6CFCF">

    <androidx.cardview.widget.CardView
        android:layout_width="421dp"
        android:layout_height="370dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonImageToView"
                android:layout_width="389dp"
                android:layout_height="240dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="396dp"
                android:layout_height="107dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonImageToView"
                app:layout_constraintVertical_bias="0.0">


                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="386dp"
                    android:layout_height="38dp"
                    android:text="Arroz simples"
                    android:hint="Titulo da receita"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/modoPreparo"
                    android:layout_width="386dp"
                    android:layout_height="43dp"
                    android:text="Ferver por 20 minutos em fogo baixo."
                    android:layout_marginTop="10dp"
                    android:hint="Descrição"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>